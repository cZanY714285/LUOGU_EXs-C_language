#include <stdio.h>
#include <math.h>

int main(){
    double x1,y1,x2,y2,x3,y3;
    scanf("%lf %lf %lf %lf %lf %lf",&x1,&y1,&x2,&y2,&x3,&y3);
    double s = 0;
    s = (x2 - x1) * (y3 - y2) - (x3 -x2) * (y2 - y1) ;
    s /= 2;
    if (s < 0) {
        s = -s;
    }printf("%.2f",s);

    return 0;

}
