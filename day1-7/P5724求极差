#include <stdio.h>
#include <limits.h>
int main(){
    int n,i,max = 0;
    int min = INT_MAX;
    int a[1000];
    scanf("%d",&n);

    for (i = 0; i < n; i++) {
        scanf("%d",&a[i]);
        if (max < a[i]) {
            max = a[i];
        }if (min > a[i]) {
            min = a[i];
        }
    }printf("%d",max -min);
    return 0;
}
